<workflow-app name="pc_homepage_waterfall_flow-wf" xmlns="uri:oozie:workflow:0.5">
	<start to="DoneFlagChecker" />
	<action name="DoneFlagChecker">
         <spark xmlns="uri:oozie:spark-action:0.1">
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <configuration>
	              <property>
	                <name>jobTracker</name>
	                <value>${jobTracker}</value>
	              </property>
	              <property>
	                <name>nameNode</name>
	                <value>${nameNode}</value>
	              </property>
				  <property>
                    <name>mapred.job.queue.name</name>
                    <value>${queueName}</value>
                  </property>
				  <property>
				    <name>oozie.use.system.libpath</name>
				    <value>true</value>
				  </property>
			</configuration>
            <master>yarn</master>
            <mode>cluster</mode>
            <name>DoneFlagChecker(gb_recommend_base_data)</name> 
            <class>com.glbg.ai.recommend_gb.DoneFlagChecker</class> 
            <jar>hdfs://glbgnameservice/user/oozie/oozie-apps/hw_bigdata_dw/dw_proj/dw_gearbest_recommend/gb_recommend_base_data/lib/recommender.jar</jar> 
            <spark-opts>--files hdfs://glbgnameservice/user/oozie/share/conf/hive-site.xml --queue root.ai.offline --executor-memory 4g --driver-memory 2g --driver-cores 2 --num-executors 1 --executor-cores 1 --driver-java-options -XX:MaxPermSize=512m --conf spark.serializer=org.apache.spark.serializer.KryoSerializer --conf spark.storage.memoryFraction=0.05 --conf spark.shuffle.memoryFraction=0.75 --conf spark.sql.shuffle.partitions=20 --conf spark.default.parallelism=20</spark-opts> 
			<arg>${YEAR}${MONTH}${DAY}</arg>
			<arg>gb_recommend_base_data</arg>
			<arg>goods_info_result_uniqlang</arg>
        </spark> 
        <ok to="pc_homepage_waterfall_flow_hive"/>
        <error to="failed_mail"/>
    </action>
	<action name="pc_homepage_waterfall_flow_hive">
        <hive xmlns="uri:oozie:hive-action:0.2">
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <job-xml>/user/oozie/share/conf/hive-site.xml</job-xml>
            <configuration>
                 <property>
                    <name>oozie.launcher.mapreduce.map.memory.mb</name>
                    <value>512</value>
                </property>
                <property>
                    <name>oozie.launcher.yarn.app.mapreduce.am.resource.mb</name>
                    <value>512</value>
                </property>
                <property>
				  <name>oozie.use.system.libpath</name>
				  <value>true</value>
				</property>
				<property>
                    <name>mapred.job.queue.name</name>
                    <value>${queueName}</value>
                </property>
            </configuration>
            <script>pc_homepage_waterfall_flow.q</script>
			         <param>DATE=${DATE}</param>
			        <param>DAYWEEK=${DAYWEEK}</param>
        </hive>
        <ok to="result_toredis"/>
        <error to="failed_mail"/>
   	    </action>   	  
	<action name="result_toredis">
		<java>
			<job-tracker>${jobTracker}</job-tracker>
			<name-node>${nameNode}</name-node>
			<prepare>
				<delete path="hdfs://glbgnameservice/import-to-redis/pc_homepage_waterfall_flow/" />
			</prepare>
			<configuration>
				<property>
					<name>mapred.job.queue.name</name>
					<value>${queueName}</value>
				</property>
			</configuration>
			<main-class>com.globalegrow.hadoop.hivetoredis.HiveToRedisPriceMR</main-class>
            <arg>/user/hive/warehouse/dw_gearbest_recommend.db/pc_homepage_waterfall_flow/</arg>
            <arg>/import-to-redis/pc_homepage_waterfall_flow/</arg>
            <arg>dw_gearbest_recommend</arg>
            <arg>pc_homepage_waterfall_flow</arg>
            <arg>pc_homepage_waterfall_flow</arg>
            <arg>tab_id###pipeline_code###lang###platform</arg>
            <arg>30</arg>
            <arg>score</arg>
		</java>
		<ok to="end" />
		<error to="failed_mail" />
	</action>   


	<action name="failed_mail">
		<email xmlns="uri:oozie:email-action:0.2">
			<to>zhanrui@globalegrow.com
			</to>
			<subject>pc_homepage_waterfall_flow-wf failed</subject>
			<body>pc_homepage_waterfall_flow-wf failed ;${timestamp()} </body>
		</email>
		<ok to="kill" />
		<error to="kill" />
	</action>

	<kill name="kill">
		<message>Job failed, error
			message[${wf:errorMessage(wf:lastErrorNode())}]</message>
	</kill>
	<end name="end" />
</workflow-app>

