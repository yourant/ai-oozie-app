<workflow-app name="recommend_soa_common_gb-wf" xmlns="uri:oozie:workflow:0.5">
	<start to="prepare" />
	<action name="prepare">
		<shell xmlns="uri:oozie:shell-action:0.2">
			<job-tracker>${jobTracker}</job-tracker>
			<name-node>${nameNode}</name-node>
			<configuration>
				<property>
					<name>mapred.job.queue.name</name>
					<value>${queueName}</value>
				</property>
			</configuration>
			<exec>${PREPARE_EXEC}</exec>
			<argument>${done_flag_dir}</argument>
			<argument>${TODAY}</argument>
			<file>${wf_application_path}/${PREPARE_EXEC}</file>
		</shell>
		<ok to="common" />
		<error to="failed_mail" />
	</action>
    <action name="common">
        <hive xmlns="uri:oozie:hive-action:0.2">
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <job-xml>/user/oozie/share/conf/hive-site.xml</job-xml>
            <configuration>
                 <property>
                    <name>oozie.launcher.mapreduce.map.memory.mb</name>
                    <value>512</value>
                </property>
                <property>
                    <name>oozie.launcher.yarn.app.mapreduce.am.resource.mb</name>
                    <value>512</value>
                </property>
                <property>
				  <name>oozie.use.system.libpath</name>
				  <value>true</value>
				</property>
				<property>
                    <name>mapred.job.queue.name</name>
                    <value>${queueName}</value>
                </property>
				<property>
				  <name>YEAR</name>
				  <value>${YEAR}</value>
				</property>
				<property>
				  <name>MONTH</name>
				  <value>${MONTH}</value>
				</property>
				<property>
				  <name>DAY</name>
				  <value>${DAY}</value>
				</property> 
				<property>
				  <name>DATE</name>
				  <value>${DATE}</value>
				</property>
            </configuration>
            <script>common.q</script>
            <param>YEAR=${YEAR}</param>
			<param>MONTH=${MONTH}</param>
			<param>DAY=${DAY}</param>
			<param>DATE=${DATE}</param>
        </hive>
        <ok to="apl_sale_top100_pipeline_fact"/>
        <error to="failed_mail"/>
    </action>
	

	
	<action name="apl_sale_top100_pipeline_fact">
		<java>
			<job-tracker>${jobTracker}</job-tracker>
			<name-node>${nameNode}</name-node>
			<configuration>
				<property>
					<name>mapred.job.queue.name</name>
					<value>${queueName}</value>
				</property>
				<property>
				  <name>YEAR</name>
				  <value>${YEAR}</value>
				</property>
				<property>
				  <name>MONTH</name>
				  <value>${MONTH}</value>
				</property>
				<property>
				  <name>DAY</name>
				  <value>${DAY}</value>
               </property>
			</configuration>
			<main-class>com.globalegrow.hadoop.mapreduce.GbRecommendRedisMR</main-class>
            <arg>/user/hive/warehouse/dw_gearbest_recommend.db/apl_sale_top100_pipeline_fact/</arg>
            <arg>/import-to-redis/apl_sale_top100_pipeline_fact</arg>
            <arg>dw_gearbest_recommend</arg>
            <arg>apl_sale_top100_pipeline_fact</arg>
            <arg>hot_sale_two_weeks_pipeline</arg>
            <arg>pipeline_code#lang</arg>
		</java>
		<ok to="apl_topsale_category50_fact" />
		<error to="failed_mail" />
	</action>
	<action name="apl_topsale_category50_fact">
		<java>
			<job-tracker>${jobTracker}</job-tracker>
			<name-node>${nameNode}</name-node>
			<configuration>
				<property>
					<name>mapred.job.queue.name</name>
					<value>${queueName}</value>
				</property>
				<property>
				  <name>YEAR</name>
				  <value>${YEAR}</value>
				</property>
				<property>
				  <name>MONTH</name>
				  <value>${MONTH}</value>
				</property>
				<property>
				  <name>DAY</name>
				  <value>${DAY}</value>
               </property>
			</configuration>
			<main-class>com.globalegrow.hadoop.mapreduce.GbRecommendRedisMR</main-class>
            <arg>/user/hive/warehouse/dw_gearbest_recommend.db/apl_topsale_category50_fact/</arg>
            <arg>/import-to-redis/apl_topsale_category50_fact</arg>
            <arg>dw_gearbest_recommend</arg>
            <arg>apl_topsale_category50_fact</arg>
            <arg>category_hot_sale</arg>
            <arg>category_id#lang</arg>
		</java>
		<ok to="apl_top10_category_fact" />
		<error to="failed_mail" />
	</action>
	<action name="apl_top10_category_fact">
		<java>
			<job-tracker>${jobTracker}</job-tracker>
			<name-node>${nameNode}</name-node>
			<configuration>
				<property>
					<name>mapred.job.queue.name</name>
					<value>${queueName}</value>
				</property>
				<property>
				  <name>YEAR</name>
				  <value>${YEAR}</value>
				</property>
				<property>
				  <name>MONTH</name>
				  <value>${MONTH}</value>
				</property>
				<property>
				  <name>DAY</name>
				  <value>${DAY}</value>
               </property>
			</configuration>
			<main-class>com.globalegrow.hadoop.mapreduce.GbRecommendRedisMR</main-class>
            <arg>/user/hive/warehouse/dw_gearbest_recommend.db/apl_top10_category_fact/</arg>
            <arg>/import-to-redis/apl_top10_category_fact</arg>
            <arg>dw_gearbest_recommend</arg>
            <arg>apl_top10_category_fact</arg>
            <arg>apl_top10_category_fact</arg>
            <arg>pipeline_code#lang</arg>
		</java>
		<ok to="apl_goods_info_result_rec_gb_fact_tohbase" />
		<error to="failed_mail" />
	</action>
<action name="apl_goods_info_result_rec_gb_fact_tohbase">
		<java>
			<job-tracker>${jobTracker}</job-tracker>
			<name-node>${nameNode}</name-node>

			<configuration>

				<property>
					<name>oozie.launcher.mapred.job.queue.name</name>
					<value>${queueName}</value>
				</property>
				<property> 
					<name>mapred.job.queue.name</name> 
					<value>${queueName}</value> 
				</property>
				<property>
					<name>YEAR</name>
					<value>${YEAR}</value>
				</property>
				<property>
					<name>MONTH</name>
					<value>${MONTH}</value>
				</property>
				<property>
					<name>DAY</name>
					<value>${DAY}</value>
				</property>

				<property>
					<name>mapreduce.job.queuename</name>
					<value>${queueName}</value>
				</property>
			</configuration>

			<main-class>com.globalegrow.hadoop.hiveimporthbasejsonmr.HiveImportHbaseHbaseJsonRunner
			</main-class>
			<arg>/user/hive/warehouse/dw_gearbest_recommend.db/goods_info_result_rec</arg>
			<arg>good_sn,goods_spu,goods_web_sku,shop_code,goods_status,brand_code,first_up_time,v_wh_code,shop_price,id,level_cnt,level_1,level_2,level_3,level_4,good_title,img_url,grid_url,thumb_url,thumb_extend_url,lang,stock_qty,avg_score,total_num,total_favorite,pipeline_code,url_title</arg>
			<arg>0,20,25</arg>
			<arg>apl_goods_info_result_rec_gb_fact</arg>
		</java>
		<ok to="succeeded" />
		<error to="failed_mail" />
	</action>
<action name="apl_gb_goods_info_tohbase">
		<java>
			<job-tracker>${jobTracker}</job-tracker>
			<name-node>${nameNode}</name-node>

			<configuration>

				<property>
					<name>oozie.launcher.mapred.job.queue.name</name>
					<value>${queueName}</value>
				</property>
				<property> 
					<name>mapred.job.queue.name</name> 
					<value>${queueName}</value> 
				</property>
				<property>
					<name>YEAR</name>
					<value>${YEAR}</value>
				</property>
				<property>
					<name>MONTH</name>
					<value>${MONTH}</value>
				</property>
				<property>
					<name>DAY</name>
					<value>${DAY}</value>
				</property>

				<property>
					<name>mapreduce.job.queuename</name>
					<value>${queueName}</value>
				</property>
			</configuration>

			<main-class>com.globalegrow.hadoop.hiveimporthbasejsonmr.HiveImportHbaseHbaseJsonRunner
			</main-class>
			<arg>/user/hive/warehouse/dw_gearbest_recommend.db/goods_info_result_uniqlang</arg>
			<arg>good_sn,goodsspu,webgoodsn,shopcode,goodsstatus,brandcode,firstuptime,warecode,shopprice,id,levelcnt,level1,level2,level3,level4,goodtitle,imgurl,gridurl,thumburl,thumbextendurl,lang,stockqty,avgrate,reviewcount,favoritecount,pipelinecode,url_title</arg>
			<arg>0,20,25</arg>
			<arg>apl_gb_goods_info</arg>
		</java>
		<ok to="succeeded" />
		<error to="failed_mail" />
	</action>
	<action name="succeeded">
		<shell xmlns="uri:oozie:shell-action:0.2">
			<job-tracker>${jobTracker}</job-tracker>
			<name-node>${nameNode}</name-node>
			<configuration>
				<property>
					<name>mapred.job.queue.name</name>
					<value>${queueName}</value>
				</property>
			</configuration>
			<exec>${DONE_FLAG_EXEC}</exec>
			<argument>${done_flag_dir}</argument>
			<argument>${TODAY}</argument>
			<file>${wf_application_path}/${DONE_FLAG_EXEC}</file>
		</shell>
		<ok to="end" />
		<error to="failed_mail" />
	</action>
	<action name="failed_mail">
		<email xmlns="uri:oozie:email-action:0.2">
			<to>bigdata@globalegrow.com
			</to>
			<subject>recommend_soa_common_gb failed</subject>
			<body>recommend_soa_common_gb failed ;${timestamp()} </body>
		</email>
		<ok to="kill" />
		<error to="kill" />
	</action>

	<kill name="kill">
		<message>Job failed, error
			message[${wf:errorMessage(wf:lastErrorNode())}]</message>
	</kill>
	<end name="end" />
</workflow-app>

