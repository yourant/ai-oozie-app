<workflow-app name="recommend_soa_homepage_gb-wf" xmlns="uri:oozie:workflow:0.5">
	<start to="prepare" />
	<action name="prepare">
		<shell xmlns="uri:oozie:shell-action:0.2">
			<job-tracker>${jobTracker}</job-tracker>
			<name-node>${nameNode}</name-node>
			<configuration>
				<property>
					<name>mapred.job.queue.name</name>
					<value>${queueName}</value>
				</property>
			</configuration>
			<exec>${PREPARE_EXEC}</exec>
			<argument>${done_flag_dir}</argument>
			<argument>${TODAY}</argument>
			<file>${wf_application_path}/${PREPARE_EXEC}</file>
		</shell>
		<ok to="soa_homepage" />
		<error to="failed_mail" />
	</action>
    <action name="soa_homepage">
        <hive xmlns="uri:oozie:hive-action:0.2">
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <job-xml>/user/oozie/share/conf/hive-site.xml</job-xml>
            <configuration>
                 <property>
                    <name>oozie.launcher.mapreduce.map.memory.mb</name>
                    <value>512</value>
                </property>
                <property>
                    <name>oozie.launcher.yarn.app.mapreduce.am.resource.mb</name>
                    <value>512</value>
                </property>
                <property>
				  <name>oozie.use.system.libpath</name>
				  <value>true</value>
				</property>
				<property>
                    <name>mapred.job.queue.name</name>
                    <value>${queueName}</value>
                </property>
				<property>
				  <name>YEAR</name>
				  <value>${YEAR}</value>
				</property>
				<property>
				  <name>MONTH</name>
				  <value>${MONTH}</value>
				</property>
				<property>
				  <name>DAY</name>
				  <value>${DAY}</value>
				</property> 
				<property>
				  <name>DATE</name>
				  <value>${DATE}</value>
				</property>
				
            </configuration>
            <script>soa_homepage.q</script>
            <param>YEAR=${YEAR}</param>
			<param>MONTH=${MONTH}</param>
			<param>DAY=${DAY}</param>
			<param>DATE=${DATE}</param>
		
        </hive>
        <ok to="apl_result_rtiyv_gb_cookie_fact_tohbase"/>
        <error to="failed_mail"/>
    </action>
<action name="apl_result_rtiyv_gb_cookie_fact_tohbase">
         <spark xmlns="uri:oozie:spark-action:0.1">
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <configuration>
	              <property>
	                <name>jobTracker</name>
	                <value>${jobTracker}</value>
	              </property>
	              <property>
	                <name>nameNode</name>
	                <value>${nameNode}</value>
	              </property>
				  <property>
                    <name>mapred.job.queue.name</name>
                    <value>${queueName}</value>
                  </property>
				  <property>
				    <name>oozie.use.system.libpath</name>
				    <value>true</value>
				  </property>
			</configuration>
            <master>yarn</master>
            <mode>cluster</mode>
            <name>CommonResult2Hbase(apl_result_rtiyv_gb_cookie_fact)</name> 
            <class>com.glbg.ai.recommend_gb.CommonResult2Hbase</class> 
            <jar>hdfs://glbgnameservice/user/oozie/oozie-apps/hw_bigdata_dw/dw_proj/dw_gearbest_recommend/recommend_soa_homepage_gb/lib/recommend-gb-1.0-SNAPSHOT-jar-with-dependencies.jar</jar> 
            <spark-opts>--files hdfs://glbgnameservice/user/oozie/share/conf/hive-site.xml --queue root.ai.offline --executor-memory 6g --driver-memory 4g --driver-cores 2 --num-executors 100 --executor-cores 1 --driver-java-options -XX:MaxPermSize=512m --conf spark.serializer=org.apache.spark.serializer.KryoSerializer --conf spark.storage.memoryFraction=0.05 --conf spark.shuffle.memoryFraction=0.75 --conf spark.sql.shuffle.partitions=2000 --conf spark.default.parallelism=2000</spark-opts> 
			<arg>apl_result_rtiyv_gb_cookie_fact</arg>
			<arg>dw_gearbest_recommend.apl_result_rtiyv_gb_cookie_fact</arg>
			<arg>0,4</arg>
        </spark>  
        <ok to="apl_result_rtiyv_gb_uncookie_fact"/>
        <error to="failed_mail"/>
    </action>
	
	<action name="apl_result_rtiyv_gb_uncookie_fact">
		<java>
			<job-tracker>${jobTracker}</job-tracker>
			<name-node>${nameNode}</name-node>
			<configuration>
				<property>
					<name>mapred.job.queue.name</name>
					<value>${queueName}</value>
				</property>
				<property>
				  <name>YEAR</name>
				  <value>${YEAR}</value>
				</property>
				<property>
				  <name>MONTH</name>
				  <value>${MONTH}</value>
				</property>
				<property>
				  <name>DAY</name>
				  <value>${DAY}</value>
               </property>
			</configuration>
			<main-class>com.globalegrow.hadoop.mapreduce.GbRecommendRedisMR</main-class>
            <arg>/user/hive/warehouse/dw_gearbest_recommend.db/apl_result_rtiyv_gb_uncookie_fact/</arg>
            <arg>/import-to-redis/apl_result_rtiyv_gb_uncookie_fact</arg>
            <arg>dw_gearbest_recommend</arg>
            <arg>apl_result_rtiyv_gb_uncookie_fact</arg>
            <arg>ahucf</arg>
            <arg>lang</arg>
		</java>
		<ok to="succeeded" />
		<error to="failed_mail" />
	</action>
	<action name="succeeded">
		<shell xmlns="uri:oozie:shell-action:0.2">
			<job-tracker>${jobTracker}</job-tracker>
			<name-node>${nameNode}</name-node>
			<configuration>
				<property>
					<name>mapred.job.queue.name</name>
					<value>${queueName}</value>
				</property>
			</configuration>
			<exec>${DONE_FLAG_EXEC}</exec>
			<argument>${done_flag_dir}</argument>
			<argument>${TODAY}</argument>
			<file>${wf_application_path}/${DONE_FLAG_EXEC}</file>
		</shell>
		<ok to="end" />
		<error to="failed_mail" />
	</action>
	<action name="failed_mail">
		<email xmlns="uri:oozie:email-action:0.2">
			<to>bigdata@globalegrow.com
			</to>
			<subject>recommend_soa_homepage_gb failed</subject>
			<body>recommend_soa_homepage_gb failed ;${timestamp()} </body>
		</email>
		<ok to="kill" />
		<error to="kill" />
	</action>

	<kill name="kill">
		<message>Job failed, error
			message[${wf:errorMessage(wf:lastErrorNode())}]</message>
	</kill>
	<end name="end" />
</workflow-app>

