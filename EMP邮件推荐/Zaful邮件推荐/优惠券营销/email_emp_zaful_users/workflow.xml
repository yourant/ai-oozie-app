<workflow-app name="email_emp_zaful_users-wf" xmlns="uri:oozie:workflow:0.5">
	<start to="zaful_user_hive" />
     <action name="zaful_user_hive">
        <hive xmlns="uri:oozie:hive-action:0.2">
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <job-xml>/user/oozie/share/conf/hive-site.xml</job-xml>
            <configuration>
                <property>
					<name>oozie.use.system.libpath</name>
					<value>true</value>
				</property>
				<property>
                   <name>mapred.job.queue.name</name>
                   <value>${queueName}</value>
                </property>
            </configuration>
            <script>zaful_user.q</script>
             <param>DATE=${DATE}</param>
			 <param>DATE_W=${DATE_W}</param>
        </hive>
        <ok to="email_emp_zaful_users2mongo"/>
        <error to="failed_mail"/>
    </action> 

 <action name="email_emp_zaful_users2mongo">
		<java>
			<job-tracker>${jobTracker}</job-tracker>
			<name-node>${nameNode}</name-node>
			<configuration>
				<property>
					<name>oozie.launcher.mapred.job.queue.name</name>
					<value>${queueName}</value>
				</property>
				<property>
					<name>YEAR</name>
					<value>${YEAR}</value>
				</property>
				<property>
					<name>MONTH</name>
					<value>${MONTH}</value>
				</property>
				<property>
					<name>DAY</name>
					<value>${DAY}</value>
				</property>
			</configuration>
			<main-class>com.globalegrow.hadoop.hivetomongo.HiveToMongoMR</main-class>
            <arg>/user/hive/warehouse/dw_zaful_recommend.db/email_emp_zaful_users/</arg>
            <arg>172.31.27.16</arg>
            <arg>27017</arg>
            <arg>recommender_online</arg>
            <arg>email_emp_zaful_users</arg>
            <arg>bigdevelp_user</arg>
            <arg>ePVxXNZKuNbAzNOH</arg>
            <arg>user_id,country_code</arg>
            <arg>int,string</arg>
            <arg>etl_date</arg>
            <arg>none</arg>
		</java>
		<ok to="finished2mongodb" />
		<error to="failed_mail" />
	</action>
     
  <action name="finished2mongodb">
		<java>
			<job-tracker>${jobTracker}</job-tracker>
			<name-node>${nameNode}</name-node>
			<configuration>
				<property>
					<name>mapred.job.queue.name</name>
					<value>${queueName}</value>
				</property>
				<property>
				  <name>YEAR</name>
				  <value>${YEAR}</value>
				</property>
				<property>
				  <name>MONTH</name>
				  <value>${MONTH}</value>
				</property>
				<property>
				  <name>DAY</name>
				  <value>${DAY}</value>
               </property>
			</configuration>
			<main-class>com.globalegrow.hadoop.Utils.OfflineRecommendUtil</main-class>
			<arg>http://172.31.27.16:5002/zf_email_recommender</arg>
			<arg>zf_email_coupon_updated</arg>
		</java>
		<ok to="doneflag_toredis" />
		<error to="failed_mail" />
	</action>

			
<action name="doneflag_toredis">
         <spark xmlns="uri:oozie:spark-action:0.1">
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <configuration>
	              <property>
	                <name>jobTracker</name>
	                <value>${jobTracker}</value>
	              </property>
	              <property>
	                <name>nameNode</name>
	                <value>${nameNode}</value>
	              </property>
				  <property>
                    <name>mapred.job.queue.name</name>
                    <value>${queueName}</value>
                  </property>
				  <property>
				    <name>oozie.use.system.libpath</name>
				    <value>true</value>
				  </property>
			</configuration>
            <master>yarn</master>
            <mode>cluster</mode>
            <name>DoneFlag2Redis(email_emp_zaful_users)</name> 
            <class>com.glbg.ai.recommend_gb.DoneFlag2Redis</class> 
            <jar>hdfs://glbgnameservice/user/oozie/oozie-apps/hw_bigdata_dw/dw_proj/dw_zaful_recommend/email_emp_zaful_users/lib/recommender.jar</jar> 
            <spark-opts>--files hdfs://glbgnameservice/user/oozie/share/conf/hive-site.xml --queue root.ai.offline --executor-memory 4g --driver-memory 2g --driver-cores 2 --num-executors 1 --executor-cores 1 --driver-java-options -XX:MaxPermSize=512m --conf spark.serializer=org.apache.spark.serializer.KryoSerializer --conf spark.storage.memoryFraction=0.05 --conf spark.shuffle.memoryFraction=0.75 --conf spark.sql.shuffle.partitions=20 --conf spark.default.parallelism=20</spark-opts> 
			<arg>${YEAR}${MONTH}${DAY}</arg>
			<arg>zaful_recommend_base_data</arg>
			<arg>email_emp_zaful_users</arg>
        </spark> 
        <ok to="end"/>
        <error to="failed_mail"/>
    </action>

	<action name="failed_mail">
		<email xmlns="uri:oozie:email-action:0.2">
			<to>zhanrui@globalegrow.com</to>
			<subject>email_emp_zaful_users-wf failed</subject>
			<body>email_emp_zaful_users-wf daily stat failed!
                  Stat DATE:${timestamp()},
                  Error message:[${wf:errorMessage(wf:lastErrorNode())}].
            </body>
		</email>
		<ok to="kill" />
		<error to="kill" />
  	</action>
	<kill name="kill">
		<message>Job failed, error
			message[${wf:errorMessage(wf:lastErrorNode())}]</message>
  	</kill>
	<end name="end" />
</workflow-app>